{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
		"experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
			"dom",
			"es6"
		],
    "noImplicitAny": true,
		"paths": {
			"lodash": [
				"@types/lodash"
			],
			"react": [
				"@types/react"
			],
			"react-dom": [
				"@types/react-dom"
			]
		},
		"pretty": true,
		"removeComments": false,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es5",
    "jsx": "react",
    "skipLibCheck": true,
    "strict": true,
    "types": ["webpack-env"]
  },
  "exclude": [
      "bin",
      "node_modules"
  ]
}
